<!-- include header-->
<%- include('include/_header')%>
<!-- /include header-->

<!-- Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"> <i class="fas fa-angle-double-left"></i> Voir les employés</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Modifier un employé</h2>
            <span class="text-light">Remplissez le formulaire suivant pour modifier l'employé</span>
        </div>
        <!-- form handling-->
<form  method="POST" id="update_employee">
    <div class="new_employee">
        <div class="form-group">
            <label for="name" class="text-light">Nom</label>
            <input type="hidden" name="id" value="<%= employee._id %>">
            <input type="text" name="name" value="<%= employee.name %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="Firstname" class="text-light">Prénom</label>
            
            <input type="text" name="firstname" value="<%= employee.firstname %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            
            <input type="text" name="email" value="<%= employee.email %>" placeholder="">
        </div>
        
        <div class="form-group">
            <label for="Profile" class="text-light">Profil</label>
            <div class="radio inline">
                <input type="radio" id="choice-1" name="profile" value="Serveur" <%= employee.profile == 'Serveur' ? 'checked' : '' %>>
                <label for="choice-1" class="radio-label">Serveur</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="choice-2" name="profile" value="Cuisinier" <%= employee.profile == 'Cuisinier' ? 'checked' : '' %>>
                <label for="choice-2" class="radio-label">Cuisinier</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="choice-3" name="profile" value="Barman" <%= employee.profile == 'Barman' ? 'checked' : '' %> >
                <label for="choice-3" class="radio-label">Barman</label>
            </div>
            
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Enregistrer</button>
        </div>
    </div>
</form>
<!-- /form handling-->
    </div>
</main>
<!-- /Main Site-->

<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->