        <div class="form-group">
            <label for="picture_url" class="text-light">URL de l'apercu du dessert</label>
            <input type="hidden" name="id" value="<%= dessert._id %>">
            <input type="text" name="picture_url" value="<%= dessert.picture_url %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Nom</label>
            
            <input type="text" name="name" value="<%= dessert.name%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Prix (en â‚¬.)</label>
            
            <input type="text" name="price" value="<%= dessert.price %>" placeholder="">
        </div>
        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Enregistrer</button>
        </div>
    </div>
</form>
