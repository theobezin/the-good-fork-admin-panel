<!-- Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/list-dessert"> <i class="fas fa-angle-double-left"></i> Voir les desserts</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Ajouter un dessert</h2>
