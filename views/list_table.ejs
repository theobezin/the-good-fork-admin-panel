<!-- include header-->
<%- include('include/_header')%>
<!-- /include header-->

 <!-- Main Site-->
 <main id="site-main">
    <div class="container">

        <div class="page-title">
            <h1 class="text-center">Gestion des tables</h1>
        </div>

        <div class="box-nav d-flex justify-between">
            <a href="/add-table" class="border-shadow">
                <span class="text-gradient">Ajouter une table <i class="fas fa-plus"></i></span>
            </a>
        </div>



        <!-- form handling-->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Numéro de la table</th>
                        <th>Capacité (en nbr. de personnes)</th>
                        
                        <th>Gérer</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_tables')%>
                </tbody>
            </table>
        </form>
        
        <!-- /form handling-->
    </div>
</main>
<!-- /Main Site-->



<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->